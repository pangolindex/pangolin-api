{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "webworker"
    ],
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
