{
  "name": "pangolin-api",
  "version": "0.3.0",
  "description": "API for reading some key values of Pangolin and the PNG token.",
  "private": true,
  "author": "Dhruba Basu",
  "contributors": [
    "Connor Daly"
  ],
  "main": "build/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "cfw build src --single",
    "deploy": "cfw deploy --single",
    "lint": "xo",
    "check": "tsc --noEmit",
    "test": "concurrently --success first --kill-others \"wrangler dev\" \"wait-on -d 5000 -t 30000 tcp:8787 && uvu -r esbuild-register tests -i setup\""
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "worktop": "0.8.0-next.5"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "1.19.3",
    "@ethersproject/abi": "5.4.1",
    "@ethersproject/bignumber": "5.4.2",
    "@ethersproject/bytes": "5.4.0",
    "cfw": "0.3.0",
    "concurrently": "6.3.0",
    "esbuild": "0.13.4",
    "esbuild-register": "3.0.0",
    "httpie": "2.0.0-next.13",
    "typescript": "4.4.3",
    "uvu": "0.6.0-next.1",
    "wait-on": "6.0.0",
    "xo": "0.45.0"
  }
}
